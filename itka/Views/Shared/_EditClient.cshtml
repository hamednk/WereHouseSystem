@model itka.Models.tblClient

@using (@Html.BeginForm("SaveClient", "App", FormMethod.Post, new { @id = "SaveChangesClientForm", enctype = "multipart/form-data", @data_toggle = "validator" }))
{
    @Html.AntiForgeryToken()
    <div class="">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-sm-8 col-sm-offset-2">
            <div class="form-group">
                <label class="col-md-12 pull-left">Emri<span style="color:red;">*</span></label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", required = "required", @data_bv_notempty_message = "Emri nuk mund të lihet bosh!", Value = Model.name } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12 pull-left">Mbiemri<span style="color:red;">*</span></label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.surname, new { htmlAttributes = new { @class = "form-control", required = "required", @data_bv_notempty_message = "Mbiemri nuk mund të lihet bosh!", Value = Model.surname } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12 pull-left">Kompania</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.company, new { htmlAttributes = new { @class = "form-control", Value = Model.company } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12 pull-left">NIPT</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.nipt, new { htmlAttributes = new { @class = "form-control", Value = Model.nipt } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12 pull-left">Tel 1</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.phone1, new { htmlAttributes = new { @class = "form-control", Value = Model.phone1 } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12 pull-left">Tel 2</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.phone2, new { htmlAttributes = new { @class = "form-control", Value = Model.phone2 } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12 pull-left">Email</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", Value = Model.email } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12">
                    Përshkrimi/Shënime
                </label>
                <div class="col-md-12">
                    <div class="clearfix"></div>
                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", Value = Model.description } })
                    @Html.HiddenFor(model => model.status, new { Value = true })
                    @Html.HiddenFor(model => model.id, new { Value = Model.id })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
                <div class="clearfix"></div>
                <br />
                <div class="col-md-12">
                    <div class="pull-right">
                        <button type="button" class="btn btn-white waves-light" onclick="CloseModal('update-modal')">Anullo</button>&nbsp;
                        <button type="button" class="btn btn-warning pull-right" data-id="SaveChangesClientForm" data-url="UpdateClient" data-table="ClientsTbl" onclick="SubmitEditForm(this)">Ruaj ndryshimet</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
