@model DataWere.Models.tblUnit
@using (@Html.BeginForm("SaveUnit", "App", FormMethod.Post, new { @id = "SaveUnitForm", enctype = "multipart/form-data", @data_toggle = "validator" }))
{
    @Html.AntiForgeryToken()
    <div class="">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-sm-12 nopadding">            
            <div class="col-sm-12">
                <label class="col-sm-6">نام واحد :</label>
                <div class="col-sm-6">@Html.DisplayFor(model => model.name)</div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="col-sm-12">
                <label class="col-sm-6">توضیحات :</label>
                <div class="col-sm-6">@Html.DisplayFor(model => model.description)</div>
            </div>
            <br />
            <div class="col-sm-12">
                <div class="pull-right">
                    <button type="button" class="btn btn-white waves-light" onclick="CloseModal('view-modal')">بستن</button>&nbsp;
                </div>
            </div>
        </div>
    </div>
}
